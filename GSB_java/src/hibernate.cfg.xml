<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
     "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
    
<hibernate-configuration>
	<session-factory>
	<!-- Affiche les logs SQL -->
	<property name="show_sql">true</property>
	<property name="hibernate.format_sql">true</property>
	<property name="use_sql_comments">true</property>

		<!--  Paramètres de connexion à la base de données -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property> 
		<property name="hibernate.connection.url">jdbc:mysql://localhost/db_quenault-d</property>
		<property name="hibernate.connection.username">gsb</property>
		<property name="hibernate.connection.password">gsb</property>

		<!-- Comportement pour la conservation des tables -->
		<property name="hbm2ddl.auto">validate</property>

		<!-- Fichiers à mapper -->
		<mapping class="com.metier.Region" />
		<mapping class="com.metier.Visiteur" />
		<mapping class="com.metier.Utilisateur" />
		<mapping class="com.metier.FicheFrais" />
		<mapping class="com.metier.LigneFraisForfait" />
		<mapping class="com.metier.LigneFraisHorsForfait" />
		<mapping class="com.metier.FraisForfait" />
		</session-factory>
</hibernate-configuration>